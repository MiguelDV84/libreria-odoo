<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- VISTA LISTA -->
        <!-- EDITORIAL -->
        <record id="libreria.editorial_list" model="ir.ui.view">
            <field name="name">Editorial list</field>
            <field name="model">libreria.editorial</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>


        <!-- VISTA FORMULARIO -->
        <record id="view_editorial_form" model="ir.ui.view">
            <field name="name">editorial.form</field>
            <field name="model">libreria.editorial</field>
            <field name="arch" type="xml">
                <form string="Editorial">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page name="libros_publicados" string="Libros Publicados">
                                <field name="libro_ids"/>
                                <button name="action_assign_existing_books"
                                string="Asignar libros existentes"
                                type="object"
                                class="oe_highlight"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ACCIÃ“N -->

        <record id="libreria_editorial_action_window" model="ir.actions.act_window">
            <field name="name">Listado de Editoriales</field>
            <field name="res_model">libreria.editorial</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
