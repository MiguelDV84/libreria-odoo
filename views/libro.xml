<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- VISTA LISTA -->
        <!-- LIBRO -->
        <record model="ir.ui.view" id="libreria_libro_list">
            <field name="name">libro.list</field>
            <field name="model">libreria.libro</field>
            <field name="arch" type="xml">
                <list string="Libros">
                    <field name="name"/>
                    <field name="libro_description"/>
                    <field name="pages"/>
                    <field name="price"/>
                    <field name="is_available"/>
                    <field name="publication_date"/>
                    <field name="created_datetime"/>
                    <field name="date_since_publication"/>
                </list>
            </field>
        </record>

        <!-- VISTA FORMULARIO -->
        <!-- LIBRO -->
        <record model="ir.ui.view" id="libreria_libro_form">
            <field name="name">libro.form</field>
            <field name="model">libreria.libro</field>
            <field name="arch" type="xml">
                <form string="Libro">
                    <sheet>
                        <notebook>
                            <page string="Detalles del Libro">
                                <group>
                                    <field name="portada" widget="image" options="{'size':[150,250]}"/>
                                </group>
                                <group>
                                    <field name="name"/>
                                    <field name="libro_description"/>
                                </group>
                                <group>
                                    <field name="pages"/>
                                    <field name="price"/>
                                </group>
                                <group>
                                    <field name="is_available"/>
                                    <field name="publication_date"/>
                                    <field name="editorial_id"/>
                                </group>
                            </page>
                            <page string ="Autores">
                                <group>
                                    <field name="autores_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACCIÃ“N -->
        <!-- LIBRO -->
        <record model="ir.actions.act_window" id="libreria_libro_action_window">
            <field name="name">Listado de Libros</field>
            <field name="res_model">libreria.libro</field>
            <field name="view_mode">list,form</field>
        </record>



    </data>
</odoo>
